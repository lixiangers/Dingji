<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/selector_list_view_item_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:addStatesFromChildren="true"
        android:paddingLeft="@dimen/view_margin_left_right_to_border"
        android:paddingRight="@dimen/view_margin_left_right_to_border">

        <TextView
            style="@style/red_text_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_number" />

        <TextView
            android:id="@+id/tv_order_number"
            style="@style/black_text_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/tv_order_time"
                style="@style/gray_text_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@drawable/ic_back" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/split_view" />
</LinearLayout>